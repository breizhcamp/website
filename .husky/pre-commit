if command -v pnpm > /dev/null 2>&1; then
  MPM="pnpm"
elif command -v bun > /dev/null 2>&1; then
  MPM="bun"
elif command -v npm > /dev/null 2>&1; then
  MPM="npm"
elif command -v yarn > /dev/null 2>&1; then
  MPM="yarn"
else
  echo "Aucun gestionnaire de paquets trouv√© (pnpm, bun, npm, yarn)"
  exit 1
fi

$MPM exec lint-staged
$MPM run build
$MPM run check
