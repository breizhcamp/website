{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 100,
	"plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		},
		{ "files": "*.md", "options": { "tabWidth": 2 } }
	],
	"tabWidth": 4,
	"svelteBracketNewLine": true
}
